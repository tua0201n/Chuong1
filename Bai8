using System;

class Program
{
    static double TinhTong(int n)
    {
        double sum = 0;
        for (int i = 1; i <= n; i++)
        {
            sum += (double)(2 * i + 1) / (2 * i + 2);
        }
        return sum;
    }
    static void Main()
    {
        Console.Write("Nhap so nguyen n: ");
        int n = int.Parse(Console.ReadLine());

        double sum = TinhTong(n);
        Console.WriteLine($"Tong S({n}) = {sum:F6}");
    }
}
