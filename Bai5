using System;

class Program
{
    static double TinhTongSoLe(int n)
    {
        double sum = 0;
        for (int i = 0; i <= n; i++)
        {
            sum += 1.0 / (2 * i + 1);
        }
        return sum;
    }
    static void Main()
    {
        Console.Write("Nhap so nguyen n: ");
        int n = int.Parse(Console.ReadLine());

        double sum = TinhTongSoLe(n);
        Console.WriteLine($"Tong S({n}) = {sum:F6}");
    }
}
